{
	"manifest_version" : 2,

	"name" : "Linghao's Hello World plugin",
	"description" : "This extension is a demo of a developer tool for Yahoo! search FE team",
	"version" : "1.0",

	"browser_action" : {
		"default_icon" : "icon.png",
		"default_popup" : "main.html"
	},

	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["page.js"]
		}
	],

	"permissions" : [
		"activeTab",
		"https://ajax.googleapis.com/"
	]
}